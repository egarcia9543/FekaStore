<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/indexHead'); %>
</head>
<body>
    <header>
        <%- include('./partials/indexHeader'); %>
    </header>

    <main>
        <section>
            <!-- Carousel -->
            <div id="demo" class="carousel slide" data-bs-ride="carousel">
        
                <!-- Indicators/dots -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                </div>
        
                <!-- The slideshow/carousel -->
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/imgs/BANNER-HOME-BLACK-SALE-27042023-LG.jpg"
                            class="d-block w-100 carImg">
                    </div>
                    <div class="carousel-item">
                        <img src="/imgs/BANNER-HOME-ESENCIA-TROPICAL-LG.webp"
                            class="d-block w-100 carImg">
                    </div>
                    <div class="carousel-item">
                        <img src="/imgs/COLOR-ROMANCE--BANNER-HOME-LG.png"
                            class="d-block w-100 carImg">
                    </div>
                </div>
        
                <!-- Left and right controls/icons -->
                <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </section>
        <section class="categories">
            <div class="row m-0">
                <div class="col-md-6 p-0 m-0">
                    <div class="men__category position-relative">
                        <button class="btn btn-dark position-absolute top-0 start-50 translate-middle-x mt-4">Ropa de Hombre</button>
                        <img src="/imgs/men.jpg" class="img-fluid img-category">
                    </div>
                </div>
                <div class="col-md-6 p-0 m-0">
                    <div class="women__category position-relative">
                        <button class="btn btn-dark position-absolute top-0 start-50 translate-middle-x mt-4">Ropa de Mujer</button>
                        <img src="/imgs/women.webp" class="img-fluid img-category">
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include('./partials/indexModals'); %>
    </body>
</html>