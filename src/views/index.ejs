<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/indexHead'); %>
</head>
<body>
    <header>
        <%- include('./partials/indexHeader'); %>
    </header>

    <main>
        <section>
            <!-- Carousel -->
            <div id="demo" class="carousel slide" data-bs-ride="carousel">
        
                <!-- Indicators/dots -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active" aria-label="Boton de carrusel"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="1" aria-label="Boton de carrusel"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="2" aria-label="Boton de carrusel"></button>
                </div>
        
                <!-- The slideshow/carousel -->
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/imgs/BANNER-HOME-LONDON-VIBES-LG.webp"
                            class="d-block w-100 carImg" alt="Ropa con london vibes">
                    </div>
                    <div class="carousel-item">
                        <img src="/imgs/BANNER-HOME-ESENCIA-TROPICAL-LG.webp"
                            class="d-block w-100 carImg" alt="Ropa tropical">
                    </div>
                    <div class="carousel-item">
                        <img src="/imgs/BANNER-HOME-RESORT-MEDITERRANEO-LG.webp"
                            class="d-block w-100 carImg" alt="Ropa mediterranea">
                    </div>
                </div>
        
                <!-- Left and right controls/icons -->
                <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev" aria-label="Boton para pasar a la izquierda">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next" aria-label="Boton para pasar a la derecha">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </section>
        <section class="categories">
            <div class="row m-0">
                <div class="col-md-6 p-0 m-0">
                    <div class="men__category position-relative">
                        <button class="btn btn-dark position-absolute top-0 start-50 translate-middle-x mt-4">Ropa de Hombre</button>
                        <img src="/imgs/men.webp" class="img-fluid img-category w-100 h-100" alt="Imagen para la categoría masculina">
                    </div>
                </div>
                <div class="col-md-6 p-0 m-0">
                    <div class="women__category position-relative">
                        <button class="btn btn-dark position-absolute top-0 start-50 translate-middle-x mt-4">Ropa de Mujer</button>
                        <img src="/imgs/women.webp" class="img-fluid img-category w-100 h-100" alt="Imagen para la categoría femenina">
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include('./partials/indexModals'); %>
    </body>
</html>