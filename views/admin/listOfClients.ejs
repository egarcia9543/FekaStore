<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/indexHead') %>
    <%- include('./datatable') %>
</head>
<body>
    <div>
        <div class="card mb-4">
            <div class="card-body d-flex justify-content-between">
                <a class="btn btn-primary" href="indexadmin">Inicio <i class="bi bi-house-fill"></i></a>
            </div>
        </div>
    </div>
    <div class="container">
        <table id="products" class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Email</th>
                    <th scope="col">Teléfono</th>
                    <th scope="col">Ubicación</th>
                    <th scope="col">Total Comprado</th>
                    <th scope="col">Historial de Compras</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% clientes.forEach(cliente=> { %>
                    <tr>
                        <td>
                            <%= cliente.nombre %>
                        </td>
                        <td>
                            <%= cliente.email %>
                        </td>
                        <td>
                            <%= cliente.telefono %>
                        </td>
                        <td>
                            <%= cliente.ubicacion.centro %>
                        </td>
                        <td>
                            <%= cliente.totalComprado %>
                        </td>
                        <td>
                            <%= cliente.historialCompras %>
                        </td>
                        <td class="d-flex">
                            <button class="btn btn-warning me-2"><i class="bi bi-pen-fill"></i></button>
                            <button class="btn btn-danger"><i class="bi bi-trash-fill"></i></button>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>
<script>
    $('#products').DataTable();
</script>

</html>