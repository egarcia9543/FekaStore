<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/indexHead'); %>
    <%- include('./datatable') %>
</head>
<body>
    <div>
        <div class="card mb-4">
            <div class="card-body d-flex justify-content-between">
                <a class="btn btn-primary" href="indexadmin">Inicio <i class="bi bi-house-fill"></i></a>
                <a class="btn btn-outline-success" href="registrovendedor">Registrar vendedor <i
                  class="bi bi-database-fill-add"></i></a>
            </div>
        </div>
    </div>
    <div class="container">
        <table id="vendedores" class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Documento</th>
                <th scope="col">Descripci√≥n</th>
                <th scope="col">Ventas</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody>
                <% vendedores.forEach(vendedor => { %>
              <tr>
                <td><%= vendedor.nombreCompleto %></td>
                <td><%= vendedor.documento %></td>
                <td><%= vendedor.correo %></td>
                <td><%= vendedor.ventasDespachadas %></td>
                <td class="d-flex">
                    <button class="btn btn-warning me-2"><i class="bi bi-pen-fill"></i></button>
                    <button class="btn btn-danger"><i class="bi bi-trash-fill"></i></button>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>    
    </div>
</body>
<script>
    $('#vendedores').DataTable();
</script>
</html>